pipeline {
    agent any

    tools {
        maven 'Maven_3.9'   // Jenkins Maven installation name
        jdk 'JDK11'         // Jenkins JDK installation name
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/YourUser/YourRepo.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                sh 'java -jar target/ci-cd-demo-1.0-SNAPSHOT.jar &'
            }
        }
    }

    post {
        always {
            mail to: 'rajkumarjittaaboyini@gmail.com',
                 subject: "Build ${currentBuild.currentResult}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                 body: "Check console output at ${env.BUILD_URL}"
        }
    }
}
