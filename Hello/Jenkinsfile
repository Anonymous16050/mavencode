pipeline {
    agent any

    tools {
        maven 'Maven_3.9'   // Jenkins Maven installation name
        jdk 'JDK11'         // Jenkins JDK installation name
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'practise',
                    url: 'https://github.com/Anonymous16050/mavencode.git'
            }
        }

        stage('Build') {
            steps {
                dir('Hello') {   // move into Hello directory where pom.xml exists
                    bat 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                dir('Hello') {
                    bat 'mvn test'
                }
            }
            post {
                always {
                    junit 'Hello/target/surefire-reports/*.xml'
                }
            }
        }

       stage('Deploy') {
    steps {
        dir('Hello') {
            script {
                // Capture the jar file name only (no full path)
                def jarFile = bat(script: 'dir /b target\\*.jar', returnStdout: true).trim()
                echo "Deploying ${jarFile}"
                // Run it from target folder
                bat "java -jar target\\${jarFile}"
            }
        }
    }
}

    }

    post {
        always {
            mail to: 'rajkumarjittaaboyini@gmail.com',
                 subject: "Build ${currentBuild.currentResult}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
                 body: "Check console output at ${env.BUILD_URL}"
        }
    }
}
